<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myrecipe_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/recipe_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/food"
            card_view:sriv_left_top_corner_radius="10dp"
            card_view:sriv_right_top_corner_radius="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="7dp"
            android:text="Recipe Name"
            android:textColor="#000000"
            android:textSize="23dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/like_button2"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:scaleType="fitXY"
                card_view:srcCompat="@drawable/icon_heart" />

            <TextView
                android:id="@+id/tv_like_count2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@id/like_button"
                android:text="Like Count"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>